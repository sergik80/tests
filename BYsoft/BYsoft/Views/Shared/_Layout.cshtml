<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Welcome | BYsoft</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />

</head>
<body>

    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">

        @Html.ActionLink("BYsoft", "Index", "Home", new { @class = "navbar-brand" })

        <div class="navbar-collapse collapse">
            <ul class="navbar-brand">about</ul>
            <ul class="navbar-brand">work</ul>
            <ul class="navbar-brand">contact</ul>
            <ul class="navbar-brand">blog</ul>
        </div>
    </nav>



    <!-------------------------->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/image1.jpg" />

            </div>

            <div class="item">
                <img src="~/Content/Images/image2.jpg" />

            </div>

            <div class="item">
                <img src="~/Content/Images/image3.jpg" />

            </div>

            <div class="item">
                <img src="~/Content/Images/image4.jpg" />

            </div>
        </div>

        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
    <!-------------------------->

    <div class="container">
        @RenderBody()

        <hr />

        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>